
@{
    ViewBag.Title = "Edit";
    var backgroundImagePath = Url.Content("~/Content/Images/Location/cake.jpg");
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url('@backgroundImagePath');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: Arial, sans-serif;
            color: #333;
        }

        h2 {
            color: ghostwhite;
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            background-color: rgba(0, 0, 0, 0.7); 
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            width: 100%;
        }

        label {
            color: ghostwhite;
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="number"],
        input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: sandybrown;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 1em;
        }

        input[type="submit"]:hover {
            background-color: wheat;
        }

        input[type="text"]:focus,
        input[type="number"]:focus {
            border-color: #4CAF50;
            outline: none;
        }
        .cancel {
            background-color: sandybrown;
            text-decoration: none;
            color: white;
            border: none;
            cursor: pointer;
            padding: 10px 20px ;
            border-radius: 5px;
            font-size: 1.2em;
            margin-top: 10px;
            margin-bottom:10px;
            display: inline-block;
        }
            .cancel:hover {
                color: yellow;
                text-decoration: none;
            }
    </style>
</head>
<body>
    
    <a class="cancel" href="/Menu/List">Cancel</a>
    <form action="/Menu/Update/@Model.Menu_id" method="POST">
        <h2>Update Menu</h2>
        <div style="display:none;">

            <input type="text" name="Menu_id" value="@Model.Menu_id" required/>
        </div>

        <div>
            <label>Menu Name:</label>
            <input type="text" name="Menu_Name" value="@Model.Menu_Name" required />
        </div>

        <div>
            <label>Menu Price:</label>
            <input type="number" name="Menu_Price" value="@Model.Menu_Price" required/>
        </div>

        <div>
            <input type="submit" value="Update" />
        </div>
    </form>
</body>
</html>

