@{
    ViewBag.Title = "Error";
    var backgroundImagePath = Url.Content("~/Content/Images/Location/cake.jpg");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
               body {
    background-image: url('@backgroundImagePath');
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    font-family: Arial, sans-serif;
    color: #333;
}
        .error-container {
            background-color: rgba(0, 0, 0, 0.6); 
            padding: 40px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h2 style="color: #ff0000; font-size: 2em; font-weight: bold; text-shadow: 1px 1px 2px #000000;">
            Something went wrong
        </h2>
        <p style="font-size: 1.2em; color: #ffffff; margin-top: 20px;">
            Please try again later or contact support if the issue persists.
        </p>
    </div>
</body>
</html>


