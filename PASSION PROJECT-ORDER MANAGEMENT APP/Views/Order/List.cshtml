@model IEnumerable<PASSION_PROJECT_ORDER_MANAGEMENT_APP.Models.OrderDto>
@{
    ViewBag.Title = "List";
    var backgroundImagePath = Url.Content("~/Content/Images/Location/cake.jpg");
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url('@backgroundImagePath');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: Arial, sans-serif;
            color: #333;
        }
        h2 {
            color: ghostwhite;
        }
        .new {
            background-color: sandybrown;
            text-decoration: none;
            color: white;
            border: none;
            cursor: pointer;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1.2em;
            margin-top: 10px;
            display: inline-block;
        }

            .new:hover {
                text-decoration: none;
                color: yellow;
            }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: rgba(0, 0, 0, 0.5); 
        }
        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: rgba(0, 0, 0, 0.5);
        }
        a {
            text-decoration: none;
            color: dimgrey;
        }
        a:hover {
            color: yellow;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h2>List</h2>
    <a class="new" href="/Order/New">Add New Order</a>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Menu Name</th>
                <th>Customer Name</th>
                <th>Location</th>
                <th>Order Date</th>
                <th>Quantity</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Order_id</td>
                    <td><a href="/Order/Details/@order.Order_id">@order.Menu_Name</a></td>
                    <td>@order.Customer_Name</td>
                    <td>@order.Location</td>
                    <td>@order.Order_Date</td>
                    <td>@order.Quantity</td>
                    <td>@order.Total_Price</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

